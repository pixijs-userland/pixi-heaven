{
  "name": "pixi-heaven",
  "version": "0.4.0",
  "description": "PixiJS v7 advanced color modes, sprites, meshes",
  "author": "Ivan Popelyshev",
  "contributors": [
    "Ivan Popelyshev <ivan.popelyshev@gmail.com>"
  ],
  "main": "./lib/index.js",
  "module": "./lib/index.mjs",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.mjs",
      "require": "./lib/index.js",
      "types": "./lib/index.d.ts"
    }
  },
  "extensionConfig": {
    "lint": [
      "src"
    ],
    "namespace": "PIXI.heaven",
    "docsName": "PixiJS Heaven plugin",
    "docsCopyright": "Copyright &copy; 2015 - 2023 Ivan Popelyshev",
    "docsTitle": "PixiJS Heaven advanced color modes, sprites, meshes API Documentation",
    "docsDescription": "Documentation for PixiJS Heaven library",
    "docsKeywords": "docs, documentation, pixi, pixijs, rendering, display, mesh, shader, javascript"
  },
  "homepage": "http://www.pixijs.com/",
  "bugs": "https://github.com/gameofbombs/pixi-heaven/issues",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gameofbombs/pixi-heaven.git"
  },
  "scripts": {
    "clean": "xs clean",
    "start": "xs serve",
    "watch": "xs watch",
    "build": "xs build",
    "lint": "xs lint",
    "lint:fix": "xs lint --fix",
    "types": "xs types",
    "release": "xs release",
    "docs": "xs docs",
    "deploy": "xs deploy",
    "test": "xs build,docs"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "files": [
    "dist/",
    "lib/",
    "global.d.ts"
  ],
  "peerDependencies": {
    "@pixi/core": "^7.2.0",
    "@pixi/display": "^7.2.0",
    "@pixi/graphics": "^7.2.0",
    "@pixi/mesh": "^7.2.0",
    "@pixi/mesh-extras": "^7.2.0",
    "@pixi/sprite": "^7.2.0",
    "@pixi/sprite-tiling": "^7.2.0",
    "@pixi/spritesheet": "^7.2.0",
    "@pixi/text-bitmap": "^7.2.0",
    "@pixi/ticker": "^7.2.0"
  },
  "devDependencies": {
    "@pixi/extension-scripts": "^1.8.1"
  }
}
